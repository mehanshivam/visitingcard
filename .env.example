ESLINT_NO_DEV_ERRORS=true
DISABLE_ESLINT_PLUGIN=true

# Development server configuration
PORT=3001

# Browser auto-open configuration
BROWSER=none

# Generate source maps for debugging
GENERATE_SOURCEMAP=true

# Google Vision API Configuration
# REQUIRED: Get your API key from Google Cloud Console
# 1. Go to: https://console.cloud.google.com/apis/credentials
# 2. Enable Vision API at: https://console.cloud.google.com/apis/library/vision.googleapis.com
# 3. Create credentials (API Key) with Vision API restrictions
# 4. Copy the key below (no quotes needed)
REACT_APP_GOOGLE_VISION_API_KEY=your_google_vision_api_key_here

# Optional: Set monthly request limit for cost control (default: 1000)
# Pricing: $3 per 1,000 requests for Document Text Detection
REACT_APP_MAX_GOOGLE_VISION_REQUESTS=1000

# Optional: Enable usage analytics and monitoring (default: true)
REACT_APP_ENABLE_ANALYTICS=true

# NOTE: If Google Vision API key is not provided, the app will fallback to Tesseract.js only
# The hybrid service automatically detects configuration and adjusts accordingly